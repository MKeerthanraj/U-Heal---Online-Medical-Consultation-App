<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterPages.RegisterAsActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/welcome_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/LoginButton"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="35dp"
            android:fontFamily="@font/quicksand_reg"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/UserRegisterButton"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="User"
            android:elevation="5dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:fontFamily="@font/quicksand_bold"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/ic_blue_button_bg"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/DoctorRegisterButton"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Doctor"
            android:elevation="5dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:fontFamily="@font/quicksand_bold"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@drawable/ic_blue_button_bg"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/ChemistRegisterButton"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Chemist"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:elevation="5dp"
            android:fontFamily="@font/quicksand_bold"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ic_blue_button_bg"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"/>


    </LinearLayout>

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already Registered? Login"
        android:textColor="#00B7FF"
        android:textAllCaps="false"
        android:padding="10dp"
        android:fontFamily="@font/quicksand_reg"
        android:elevation="5dp"
        android:background="@drawable/round_button_white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>